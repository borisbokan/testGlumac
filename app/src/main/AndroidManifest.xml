<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.borcha.testglumci">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.borcha.testglumci.Aktivnosti.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.borcha.testglumci.Aktivnosti.UnosIspravkaGlumac"
            android:label="@string/unos_ispravka_glumca">


        </activity>

        //Podesavanja
        <activity android:name=".Aktivnosti.PodesavanjaActivty"
            android:label="@string/podesavanja"
            android:parentActivityName=".Aktivnosti.MainActivity"/>


        //Degtalji glumca
        <activity android:name=".Aktivnosti.DetaljiGlumac"
            android:label="@string/app_name"
            android:description="@string/detalji_glumca"
            android:parentActivityName=".Aktivnosti.MainActivity"/>

        //Degtalji glumca
        <activity android:name=".Aktivnosti.UnosIspravkaFilma"
            android:label="@string/app_name"
            android:description="@string/unos_ispravka_filma"
            android:parentActivityName=".Aktivnosti.DetaljiGlumac"/>

    </application>

</manifest>